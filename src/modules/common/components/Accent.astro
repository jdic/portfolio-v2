---
import type { HTMLAttributes } from 'astro/types'
import { tw } from '@/lib/tw'

interface Props extends HTMLAttributes<'span'>
{}

const
{
  class: className,
  ...props
} = Astro.props
---

<span
  class={tw(
    "text-light-accent dark:text-dark-accent",
    className,
  )}
  {...props}
>
  <slot />
</span>
